<h1>Uploaded images</h1>

<p><%= link_to "Add a new image", new_image_path %></p>

<% @images.each do |image| %>
    <p>
        <strong><%= image.title %>, <%= image.id %></strong> &nbsp;
        <small>created on <%= image.created_at.to_s(:long) %></small>
    </p>
    <% if image.imageFile.attached? %>
        <p><%= link_to image_tag(image.imageFile), url_for(image.imageFile) %></p>
        <% else %><p>No image</p>
    <% end %>
<% end %>
